ARG BASE="quay.io/fedora/fedora-bootc:42"
FROM ${BASE}
RUN mkdir -p /var/roothome
RUN dnf install -y \
    vim \
    git \
    htop \
    tree \
    curl \
    wget \
    bash-completion \
    systemd-networkd \
    && dnf clean all

RUN systemctl enable systemd-networkd
RUN systemctl enable sshd
RUN bootc container lint
LABEL containers.bootc=1
LABEL org.opencontainers.image.title="my-custom-fedora-bootc"
LABEL org.opencontainers.image.description="Custom Fedora bootc image with vim and basic tools"
